 rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // This single rule covers ALL user-owned content.
    // It allows a user to read and write to any file inside their own folder.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}
